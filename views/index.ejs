<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div class="w-full min-h-screen bg-zinc-900">
      <div class="form-container flex justify-center">
        <div
          class="form p-10 text-white bg-zinc-800 rounded-md mt-2 text-center"
        >
          <form action="/create" method="post">
            <input
              type="text"
              class="block px-5 py-2 border-solid border -2 border-white bg-zinc-800 outline-none"
              placeholder="Title here.."
              name="title"
            />
            <textarea
              name="details"
              id=""
              class="block px-7 py-3 bg-zinc-800 mt-2 resize-none outline-none border-solid border -2 border-white"
              placeholder="write here.."
            ></textarea>
            <input
              type="submit"
              class="mt-4 p-2 bg-blue-500 rounded-md"
              value="Create Task"
            />
          </form>
        </div>
      </div>
      <div class="tasks flex flex-wrap gap-5 m-5">
        <% if(files.length>0){%> <% files.forEach(function(val){%>

        <div class="task bg-zinc-700 px-5 py-3 rounded-md">
          <h2 class="text-white"><%= val%></h2>
          <a class="text-blue-500 cursor-pointer" href="/file/<%=val%>"
            >Read more</a
          >
        </div>
        <%})%> <%} else {%>
        <h3 class="text-white">No task yet..</h3>
        <%}%>
      </div>
    </div>
  </body>
</html>
